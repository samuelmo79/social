{% extends 'base.html.twig' %}

{% block title %}Editar Perfil{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="card mb-3">
                <div class="card-header bg-primary">
                    <div class="text-center">

                                <img class="img-fluid img-thumbnail rounded-circle img-size-100"
                                     src="{{ asset('imagens/perfil/avatar_homem.png') }}"
                                     alt="Perfil">

                    </div>
                    <h3 class="text-center">
                        {{ app.user.dadosPessoais.nome }} {{ app.user.dadosPessoais.sobrenome }}
                    </h3>
                    <h5 class="text-center small">
                        {% if user.localizacao is not null %}
                            {{ user.localizacao.bairro }}, {{ user.localizacao.estado }} - {{ user.localizacao.pais }}
                        {% else %}
                            <a href="#" class="btn btn-light btn-sm"><i class="fas fa-map-marker-alt"></i> Editar sua localização</a>
                        {% endif %}
                    </h5>
                </div>
                <div class="card-body">
                    <a href="#" class="btn btn-light btn-sm ml-2 float-right">Editar Perfil</a>
                </div>
                <div class="card-footer">
                    <ul class="nav nav-pills">
                        <li class="nav-item">
                            <a class="nav-link active" href="#">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Atividades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Grupos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="#">Fotos</a>
                        </li>
                    </ul>
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="card">
                <div class="card-body">
                    <ul class="nav nav-tabs" id="myTab" role="tablist">
                        <li class="nav-item" role="presentation">
                            <a class="nav-link active"
                               id="dadosPessoais-tab"
                               data-toggle="tab"
                               href="#dadosPessoais"
                               role="tab"
                               aria-controls="dadosPessoais"
                               aria-selected="true">
                                Dados Pessoais
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link"
                               id="imagem-tab"
                               data-toggle="tab"
                               href="#imagem"
                               role="tab"
                               aria-controls="imagem"
                               aria-selected="false">
                                Imagem do Perfil
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link"
                               id="local-tab"
                               data-toggle="tab"
                               href="#local"
                               role="tab"
                               aria-controls="local"
                               aria-selected="false">
                                Localização
                            </a>
                        </li>
                        <li class="nav-item" role="presentation">
                            <a class="nav-link"
                               id="configuracao-tab"
                               data-toggle="tab"
                               href="#configuracao"
                               role="tab"
                               aria-controls="configuracao"
                               aria-selected="false">
                                Configurações
                            </a>
                        </li>
                    </ul>
                    <div class="tab-content" id="myTabContent">
                        <div class="tab-pane fade show active"
                             id="dadosPessoais" role="tabpanel"
                             aria-labelledby="dadosPessoais-tab">
                            <!-- Dados Pessoais -->
                            <div class="tab-pane fade show active" id="v-pills-dadosPessoais" role="tabpanel" aria-labelledby="v-pills-dadosPessoais-tab">
                                <div class="alert alert-secondary mt-3" role="alert">
                                    Dados Pessoais
                                </div>
                                {{ form_start(form, {"attr": {"novalidate": "novalidate"}} ) }}
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">{{ form_label(form.dadosPessoais.nome) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.dadosPessoais.nome) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">{{ form_label(form.dadosPessoais.sobrenome) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.dadosPessoais.sobrenome) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">{{ form_label(form.dadosPessoais.sexo) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.dadosPessoais.sexo) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <label class="col-sm-2 col-form-label">{{ form_label(form.dadosPessoais.dataNascimento) }}</label>
                                    <div class="col-sm-10">
                                        {{ form_widget(form.dadosPessoais.dataNascimento) }}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-sm-10">
                                        <button type="submit" class="btn btn-primary btn-sm">Atualizar</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane fade"
                             id="imagem"
                             role="tabpanel"
                             aria-labelledby="imagem-tab">
                            <!-- Imagem -->
                            <div class="alert alert-secondary mt-3" role="alert">
                                Imagem do Perfil
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">{{ form_label(form.imageFile) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.imageFile) }}
                                    {% if app.user.avatar == null %}
                                        {% if app.user.dadosPessoais.sexo == 'Masculino' %}
                                            <img class="img-fluid img-thumbnail rounded-circle img-size-100"
                                                 src="{{ asset('imagens/perfil/avatar_homem.png') }}"
                                                 alt="Perfil">
                                        {% else %}
                                            <img class="img-fluid img-thumbnail rounded-circle img-size-100"
                                                 src="{{ asset('imagens/perfil/avatar_homem.png') }}"
                                                 alt="Perfil">
                                        {% endif %}
                                    {% else %}
                                        <img class="img-fluid img-thumbnail rounded-circle img-size-100"
                                             src="{{ asset('imagens/perfil/' ~ app.user.avatar) }}"
                                             alt="Perfil"
                                             width="100">
                                    {% endif %}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary btn-sm">Atualizar</button>
                                </div>
                            </div>
                            <!-- Fim imagem -->
                        </div>
                        <div class="tab-pane fade"
                             id="local"
                             role="tabpanel"
                             aria-labelledby="local-tab">
                            <!-- Localização -->
                            <div class="alert alert-secondary mt-3" role="alert">
                                Localização
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">{{ form_label(form.localizacao.bairro) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.localizacao.bairro) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">{{ form_label(form.localizacao.cidade) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.localizacao.cidade) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">{{ form_label(form.localizacao.estado) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.localizacao.estado) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-sm-2 col-form-label">{{ form_label(form.localizacao.pais) }}</label>
                                <div class="col-sm-10">
                                    {{ form_widget(form.localizacao.pais) }}
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary btn-sm">Atualizar</button>
                                </div>
                            </div>
                            <!-- Fim Localização -->
                        </div>
                        <div class="tab-pane fade"
                             id="configuracao"
                             role="tabpanel"
                             aria-labelledby="configuracao-tab">
                            <!-- Configuração -->
                            <div class="alert alert-secondary mt-3" role="alert">
                                Configurações
                            </div>
                            <div class="form-group row">
                                Layout
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-10">
                                    <button type="submit" class="btn btn-primary btn-sm">Atualizar</button>
                                </div>
                            </div>
                            {{ form_end(form) }}
                            <!-- fim Configuração -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
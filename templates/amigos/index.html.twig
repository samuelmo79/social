{% extends 'base.html.twig' %}

{% block title %}Amigos{% endblock %}

{% block titulo %}
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Amigos</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Amigos</li>
                </ol>
            </div>
        </div>
    </div>
{% endblock %}

{% block body %}
    <div class="row d-sm-none d-block">
        <div class="col-sm-12">
            <div class="mb-3">
                <a href="{{ path('meus_amigos') }}" class="btn btn-secondary btn-rounded btn-sm">
                    Meus amigos
                </a>
                <a href="{{ path('amigos') }}" class="btn btn-secondary btn-rounded btn-sm">
                    Encontrar amigos
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <div class="card mb-4">
                <div class="card-body">
                    <form method="get" action="">
                        <div id="custom-search-input">
                            <div class="input-group">
                                <input type="search"
                                       class="search-query form-control"
                                       placeholder="Pesquisar"
                                       name="pesquisar_amigos"
                                       value="{{ app.request.get('pesquisar_amigos') }}">
                                <span class="input-group-btn">
                                    <button class="btn btn-primary" type="submit">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert alert-{{ label }} alert-dismissible fade show" role="alert">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        {{ message }}
                    </div>
                {% endfor %}
            {% endfor %}
            <div class="card">
                <div class="card-body table-responsive p-0">
                    <table class="table">
                        <tbody>
                        {% for amigos in user %}
                            <tr>
                                <td>
                                    {% if amigos.avatar == null %}
                                        {% if amigos.dadosPessoais.sexo == 'Masculino' %}
                                            <img class="img-fluid img-thumbnail rounded-circle float-left mr-2"
                                                 src="{{ asset('imagens/perfil/avatar_homem.png') }}"
                                                 alt="Perfil"
                                                 width="50">
                                        {% else %}
                                            <img class="img-fluid img-thumbnail rounded-circle float-left mr-2"
                                                 src="{{ asset('imagens/perfil/avatar_mulher.png') }}"
                                                 alt="Perfil"
                                                 width="50">
                                        {% endif %}
                                    {% else %}
                                        <img class="img-fluid img-thumbnail rounded-circle float-left mr-2"
                                             src="{{ asset('imagens/perfil/' ~ amigos.avatar) }}"
                                             alt="Perfil"
                                             width="50">
                                    {% endif %}
                                    <a class="card-link" href="{{ path('amigos_perfil', {'id': amigos.id}) }}">
                                        {{ amigos.dadosPessoais.nome }} {{ amigos.dadosPessoais.sobrenome }}<br>
                                    </a>
                                    <span class="small text-muted">
                                        <i class="fas fa-shield-alt text-secondary"></i>
                                        {{ amigos.dataCadastro|date('Y') }}
                                    </span>
                                </td>
                                <td align="left">
                                <span class="text-muted small">
                                    {% if amigos.localizacao == null %}
                                        <div class="text-danger">
                                          Localização não informada
                                        </div>
                                    {% else %}
                                        {{ amigos.localizacao.bairro }}, {{ amigos.localizacao.cidade }} - {{ amigos.localizacao.pais }}
                                    {% endif %}
                                </span>
                                </td>
                                <td style="width: 28%;">
                                    <a href="{{ path('solicita_amizade', {'id': amigos.id}) }}" class="btn btn-light btn-sm">Enviar solicitação</a>
                                </td>
                            </tr>
                        {% else %}
                            <div class="alert alert-primary mt-4 mx-3" role="alert">
                                Nenhum usuário encontrado
                            </div>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="my-3 mx-3">
                    <span class="text-muted mr-2">Total de {{ user.getTotalItemCount }} registros</span>
                    <div class="btn-group float-right">
                        {{ knp_pagination_render(user) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-4 d-xl-block d-none">
            <div class="list-group">
                <a href="{{ path('meus_amigos') }}"
                   class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'meus_amigos' %} active {% endif %}">
                    <i fla class="fa fa-users"></i> Meus amigos
                    <span class="badge badge-light badge-pill float-right">{{ app.user.totalAmigos }}</span>
                </a>
                <a href="{{ path('amigos') }}"
                   class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'amigos' %} active {% endif %}">
                    <i fla class="fa fa-search"></i> Encontrar amigos
                </a>
                <a href="{{ path('bloqueios') }}"
                   class="list-group-item list-group-item-action {% if app.request.attributes.get('_route') == 'bloqueios' %} active {% endif %}">
                    <i fla class="fa fa-ban"></i> Bloqueios
                </a>
            </div>
        </div>
    </div>
{% endblock %}
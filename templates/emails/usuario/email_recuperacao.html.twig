{% extends 'email_base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row justify-content-md-center mt-3">
        <div class="col-sm-5">
            <h2 class="card">
                <div class="card-header text-center">
                    Recuperar Senha
                </div>
            </h2>
            {{ form_start(form, {'attr': {'class': 'ui form', 'id': 'form_reset'}}) }}
            {% form_theme form with 'bootstrap_4_layout.html.twig' %}
            <div class="form-group row">
                <label for="email" class="col-sm-2 col-form-label">E-mail</label>
                <div class="col-sm-10">
                    {{ form_widget(form.email) }}
                </div>
            </div>
            <div class="ui stacked segment">
                <button class="btn btn-block btn-primary my-3" type="submit">Solicitar redefinição de senha</button>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}